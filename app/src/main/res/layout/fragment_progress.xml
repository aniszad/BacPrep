<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/sv_progress_frag"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.user.ProgressFragment"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_main_circular_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/blackish"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_main_circular_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >
                    <LinearLayout
                        android:id="@+id/ll_bac_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/pomodoro_spinner_background"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/progress_bar_overall"
                        >
                        <TextView
                            android:id="@+id/tv_time_remaining_until_exam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/heures"
                            android:textStyle="bold"
                            android:maxLines="3"
                            app:fontFamily="@font/normal_title_font"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@android:color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/jusqu_aux_epreuves_du_bac"
                            android:textStyle="bold"
                            android:fontFamily="@font/main_font"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@android:color/white"
                            />

                    </LinearLayout>
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progress_bar_overall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminateOnly="false"
                        android:layout_margin="@dimen/_10sdp"
                        android:progress="0"
                        android:elevation="10dp"
                        app:indicatorSize="@dimen/_120sdp"
                        app:indicatorColor="@color/blue"
                        app:trackColor="@color/light_gray_constant"
                        app:trackCornerRadius="10dp"
                        android:max="100"
                        app:trackThickness="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/light_gray_constant"
                        app:layout_constraintEnd_toEndOf="@id/progress_bar_overall"
                        app:layout_constraintStart_toStartOf="@id/progress_bar_overall"
                        app:layout_constraintTop_toTopOf="@id/progress_bar_overall"
                        app:layout_constraintBottom_toBottomOf="@id/progress_bar_overall">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="@font/normal_title_font"
                                android:text="@string/progres_total"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_8ssp"
                                />
                            <TextView
                                android:id="@+id/tv_overall_progress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="@font/main_font"
                                android:text="0.0%"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="@dimen/_10ssp"
                                />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_modules_progress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_main_circular_progress_bar"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
