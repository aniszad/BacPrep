<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.user.UserMainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_user_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bnv_user_main"
        />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnv_user_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            app:elevation="0dp"
            app:backgroundTint="@color/light_gray_to_deep_charcoal"
            app:labelVisibilityMode="unlabeled"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
            app:itemRippleColor="@android:color/transparent"
            app:itemHorizontalTranslationEnabled="false"
            app:menu="@menu/user_navigation_bottom_menu"
            android:animateLayoutChanges="false"
            app:itemIconTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            />


</androidx.constraintlayout.widget.ConstraintLayout>