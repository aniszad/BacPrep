<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_top"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollIndicators="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_to_deep_charcoal"
    tools:context=".fragments.user.MainProgressFragment"
        >
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_progress_frags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabTextColor="@color/blackish_to_white"
            app:tabIndicatorColor="@color/blackish_to_white"
            android:layout_marginHorizontal="@dimen/_12sdp"
            app:tabTextAppearance="@style/CustomTabTextAppearance"
            app:tabIndicatorAnimationMode="elastic"
            app:tabIndicatorAnimationDuration="500"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mes_progres"
                android:elevation="10dp"
                android:layout_gravity="center"
                android:textSize="@dimen/_12ssp"
                />
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minuteur"
                android:layout_gravity="center"
                android:textSize="@dimen/_12ssp"
                />
        </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_progress_frags"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_progress_frags"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
