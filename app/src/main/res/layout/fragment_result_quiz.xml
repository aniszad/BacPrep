<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/white_to_grayish_black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.user.quizFragments.QuizResultFragment">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_confetti_backg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:lottie_loop="true"
        android:elevation="0dp"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_rawRes="@raw/anim_confetti"
        />



    <ImageView
        android:id="@+id/im_result_medal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/icon_bronze_medal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_quiz_result_title"
        />
    <TextView
        android:id="@+id/tv_quiz_result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/felicitation"
        android:textStyle="bold"
        app:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/ll_quiz_result"
        />
    <LinearLayout
        android:id="@+id/ll_quiz_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/quiz_result_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vous_avez_obtenu"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tv_quiz_result_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/poppins_extrabold"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_30ssp"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
                    android:id="@+id/ll_correct_answers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ll_quiz_result"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vous_avez_repondu_correctement_sur"
                        android:textSize="@dimen/_10ssp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/blackish_to_white"
                        />
                    <TextView
                        android:id="@+id/tv_correct_answers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_13ssp"
                        android:gravity="center_horizontal"
                        />
                </LinearLayout>
    <LinearLayout
                    android:id="@+id/ll_wrong_answers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ll_correct_answers"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vous_avez_repndu_incorrectement_sur"
                        android:textSize="@dimen/_10ssp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/blackish_to_white"
                        />
                    <TextView
                        android:id="@+id/tv_wrong_answers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="@dimen/_13ssp"
                        android:gravity="center_horizontal"
                        />
                </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_end_quiz"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/green"
        app:cornerRadius="100dp"
        app:icon="@drawable/icon_arrow_right"
        app:iconGravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_wrong_answers"
        android:padding="@dimen/_8sdp"
        android:textAllCaps="false"
        android:text="@string/terminer"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>