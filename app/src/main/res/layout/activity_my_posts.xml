<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="match_parent"
    tools:context=".activities.admin.MyPostsActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/user_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rv_my_posts"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_admin_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/im_my_profile_picture"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <TextView
                    android:id="@+id/tv_posts_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_14ssp"
                    android:text="0"
                    android:gravity="center"
                    app:fontFamily="@font/poppins_bold"
                    app:layout_constraintEnd_toStartOf="@id/tv_pub"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    />
                <TextView
                    android:id="@+id/tv_pub"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/publications"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/black"
                    app:fontFamily="@font/poppins_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_posts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/user_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearance="@style/top_rounded_card_shape"
        />
</androidx.constraintlayout.widget.ConstraintLayout>