<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/white_to_deep_charcoal"
    android:layout_height="match_parent"
    tools:context=".activities.user.SendRequestsActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_send_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@color/light_gray_to_deep_charcoal"
        app:menu="@menu/send_requests_toolbar_menu"
        app:navigationIcon="@drawable/icon_arrow_left"
        app:navigationIconTint="@color/sea_blue"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16ssp"
            android:maxLines="1"
            android:textColor="@color/black"
            app:fontFamily="@font/poppins_bold"
            android:text="@string/questions"
            />
    </com.google.android.material.appbar.MaterialToolbar>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_send_requests"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_request_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:boxStrokeWidth="0dp"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:minHeight="@dimen/_120sdp"
            app:boxCornerRadiusTopStart="0dp"
            android:layout_marginTop="@dimen/_8sdp"
            app:boxCornerRadiusTopEnd="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/post_edittext_background_gradient"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_request_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="6dp"
                android:hint="@string/saisissez_votre_question"
                android:gravity="start|top"
                app:fontFamily="@font/main_font"
                android:layoutDirection="locale"
                android:textSize="14sp"
                android:scrollHorizontally="false"
                android:inputType="textMultiLine|textCapSentences"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_second" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/btn_send_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/envoyer"
            android:visibility="gone"
            android:textColor="@color/green"
            android:padding="5dp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginVertical="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="@id/til_request_text"
            app:layout_constraintBottom_toBottomOf="@id/til_request_text"
            />
        <LinearLayout
            android:id="@+id/ll_title_my_requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/til_request_text"
            >
            <TextView
                android:id="@+id/tv_title_my_requests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/mes_questions"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layoutDirection="locale"
                android:padding="5dp"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/btn_see_answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@string/see_answers"
                android:textColor="@color/green"
                android:layoutDirection="locale"
                android:padding="5dp"
                android:gravity="end"
                android:layout_margin="5dp"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_my_requests_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ll_title_my_requests"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>