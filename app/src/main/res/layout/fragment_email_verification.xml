<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="match_parent"
    android:background="@color/green"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.shared.EmailVerificationFragment">

    <TextView
        android:id="@+id/tv_email_verif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="100dp"
        android:textStyle="bold"
        android:text="@string/v_rifaction_de_compte"
        android:gravity="center"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/register_card"
        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/register_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:shapeAppearance="@style/card_shape"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_step1"
                />
            <TextView
                android:id="@+id/tv_step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                />
            <TextView
                android:id="@+id/tv_step2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_step1"
                />
            <TextView
                android:id="@+id/tv_step3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_step2"
                />

            <TextView
                android:id="@+id/tv_email_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:gravity="center"
                android:textColor="@color/green"
                app:layout_constraintTop_toBottomOf="@id/tv_step3"
                app:layout_constraintBottom_toTopOf="@id/btn_send_verif_email"
                />
            <TextView
                android:id="@+id/btn_send_verif_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cornerRadius="100dp"
                android:text="@string/envoyer_un_email_de_verification"
                android:gravity="center"
                android:textSize="@dimen/_9ssp"
                android:textColor="@color/blue"
                android:backgroundTint="@color/blue"
                android:layout_marginBottom="@dimen/_16sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_email_status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btn_finish_registration"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_finish_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_50sdp"
                android:backgroundTint="@color/yellow"
                android:padding="12dp"
                app:elevation="0dp"
                android:gravity="center"
                app:cornerRadius="12dp"
                android:text="@string/terminer"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@id/btn_send_verif_email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>