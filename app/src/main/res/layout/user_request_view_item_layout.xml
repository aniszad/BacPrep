<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_request"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_6sdp"
        >
        <ImageView
            android:id="@+id/im_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/icon_bottom_right"
            app:tint="@android:color/darker_gray" />
        <TextView
            android:id="@+id/tv_request_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/im_arrow"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/a_demande"
            android:layout_marginStart="@dimen/_4sdp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@id/tv_request_owner_name"
            app:layout_constraintStart_toEndOf="@id/tv_request_owner_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_request_owner_name"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/btn_request_more_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_request_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/grayish_black_to_light_gray"
            android:textSize="@dimen/_10ssp"
            app:fontFamily="@font/roboto_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_request_owner_name"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_date_more"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_request_text"
            >
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:ellipsize="end"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/grayish_black_to_light_gray"
                app:fontFamily="@font/roboto_regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <ImageView
                android:id="@+id/im_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:ellipsize="end"
                android:src="@drawable/icon_drop_down_arrow"
                android:layout_gravity="end"
                app:fontFamily="@font/roboto_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_date"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/gray_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray_constant"
        app:layout_constraintTop_toBottomOf="@id/cl_request"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>