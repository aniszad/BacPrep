        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/white"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_collapseMode="parallax"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <TextView
                        android:id="@+id/tv_quiz_frag_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="@color/black"
                        android:layoutDirection="locale"
                        android:gravity="start"
                        android:text="@string/testez_vos_connaissances"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_16sdp"
                        app:fontFamily="@font/title_font"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <TextView
                        android:id="@+id/tv_quiz_frag_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layoutDirection="locale"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:layout_constraintBottom_toTopOf="@id/tab_layout_quizzes"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:text="@string/quizzes_page_description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_quiz_frag_title"
                        />
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout_quizzes"
                        android:layout_width="match_parent"
                        android:clipToPadding="true"
                        android:layout_height="@dimen/_30sdp"
                        app:tabGravity="fill"
                        android:paddingHorizontal="@dimen/_4sdp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:background="@drawable/tab_layout_gray_backg"
                        app:tabMode="scrollable"
                        android:padding="0dp"
                        app:tabTextColor="@color/white"
                        app:tabSelectedTextColor="@color/black_text"
                        app:tabTextAppearance="@style/CustomTabTextAppearance"
                        app:tabPadding="0dp"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:tabIndicator="@null"
                        app:tabRippleColor="@android:color/transparent"
                        app:tabBackground="@drawable/tab_item_backg_selector"
                        app:tabIndicatorFullWidth="false"
                        app:layout_constraintTop_toBottomOf="@id/tv_quiz_frag_text"

                        >
                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/histoire"
                            android:elevation="10dp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_12ssp"
                            />
                        <com.google.android.material.tabs.TabItem
