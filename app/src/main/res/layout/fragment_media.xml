<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/white_to_deep_charcoal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.user.AudioResourcesFragment">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:elevation="5dp"
            android:background="@android:color/transparent"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/white"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/c_audio_top_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                >
                <TextView
                    android:id="@+id/tv_audio_library"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layoutDirection="locale"
                    android:gravity="start"
                    android:text="@string/librairie"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/cl_top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/cl_audio_files_search_bar"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_audio_files_search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@id/tv_audio_library"
                    >
                    <AutoCompleteTextView
                        android:id="@+id/auto_tv_audio_search"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_37sdp"
                        android:background="@drawable/auto_compelete_tv_circular_background"
                        android:hint="@string/rechercher"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layoutDirection="locale"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"
                        android:textSize="12sp"
                        android:textColorHint="@android:color/darker_gray"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_search"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <ImageButton
                        android:id="@+id/btn_search"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_37sdp"
                        android:src="@drawable/icon_search"
                        android:background="@drawable/search_button_backg"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingEnd="8dp"
                        app:tint="@color/white"
                        android:paddingStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_audio_type_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@id/cl_audio_files_search_bar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <TextView
                        android:id="@+id/tv_media_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="@color/black"
                        android:text="@string/audio_resources_page_title"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layoutDirection="locale"
                        android:layout_margin="@dimen/_16sdp"
                        app:fontFamily="@font/title_font"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <TextView
                        android:id="@+id/tv_media_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:layoutDirection="locale"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:text="@string/audio_resources_page_description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_media_title"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_regular_audios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@id/rv_audio_type_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>