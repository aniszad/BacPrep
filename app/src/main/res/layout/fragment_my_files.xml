<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackish"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.user.MyFilesFragment"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="5dp"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/white"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_top_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    app:layout_collapseMode="parallax"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginVertical="@dimen/_8sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <ImageView
                        android:id="@+id/im_shelves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_shelves"
                        app:tint="@android:color/white"
                        android:contentDescription="@string/image_couldnt_load"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <TextView
                        android:id="@+id/tv_my_files"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mes_fichiers"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        app:fontFamily="@font/title_font"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/btn_contribute"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_contribute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/icon_add"
                        app:iconTint="@color/white_constant"
                        app:iconGravity="start"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/blackish"
                        android:text="@string/contribuer"
                        android:textSize="@dimen/_7ssp"
                        android:textAllCaps="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_my_files"
                        app:layout_constraintBottom_toBottomOf="parent"

                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintTop_toBottomOf="@id/cl_top_view"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="15dp"
                app:cardBackgroundColor="@color/white_to_grayish_black"
                app:shapeAppearance="@style/card_shape_files"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/cl_top_view"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                    <GridLayout
                        android:id="@+id/grid_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tv_recent"
                        >
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_downloads"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/blackish"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            app:cardElevation="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_2sdp"
                                android:background="@android:color/transparent"
                                >
                                <ImageView
                                    android:id="@+id/icon_downloads"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_10sdp"
                                    android:contentDescription="@string/image_couldnt_load"
                                    android:src="@drawable/icon_folder_red"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    />
                                <LinearLayout
                                    android:id="@+id/ll_my_downloads"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    app:layout_constraintTop_toBottomOf="@id/icon_downloads"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <TextView
                                        android:id="@+id/tv_downloads"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12ssp"
                                        android:text="@string/telechargement"
                                        android:fontFamily="@font/normal_title_font"
                                        android:textColor="@android:color/white"
                                        app:layout_constraintTop_toTopOf="parent"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        >
                                        <TextView
                                            android:id="@+id/tv_downloads_file_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_8ssp"
                                            android:text=""
                                            android:textColor="@android:color/white"
                                            android:paddingStart="@dimen/_5sdp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toStartOf="@id/tv_files"
                                            app:layout_constraintTop_toBottomOf="@id/tv_downloads"
                                            />
                                        <TextView
                                            android:id="@+id/tv_files"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_8ssp"
                                            android:text="@string/fichiers"
                                            android:textColor="@android:color/white"
                                            app:layout_constraintStart_toEndOf="@id/tv_downloads_file_count"
                                            app:layout_constraintTop_toBottomOf="@id/tv_downloads"
                                            android:paddingStart="@dimen/_5sdp"
                                            />
                                    </LinearLayout>
                                    <TextView
                                        android:id="@+id/tv_downloads_files_size"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_8ssp"
                                        android:text=""
                                        android:textColor="@android:color/white"
                                        app:layout_constraintTop_toBottomOf="@id/tv_downloads_file_count"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:paddingStart="@dimen/_5sdp"
                                        android:textStyle="bold"
                                        />
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_subjects_bank"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            app:cardBackgroundColor="@color/blackish"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            app:cardElevation="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_2sdp"
                                android:background="@android:color/transparent"
                                >
                                <ImageView
                                    android:id="@+id/icon_folder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_10sdp"
                                    android:contentDescription="@string/image_couldnt_load"
                                    android:src="@drawable/icon_folder_yellow"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    />
                                <LinearLayout
                                    android:id="@+id/ll_mes_fichiers"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    app:layout_constraintTop_toBottomOf="@id/icon_folder"
                                    app:layout_constraintStart_toEndOf="@id/icon_folder"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12ssp"
                                        android:text="@string/banque_de_sujets"
                                        android:textColor="@android:color/white"
                                        android:fontFamily="@font/normal_title_font"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        >
                                        <TextView
                                            android:id="@+id/tv_subjects_bank_file_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_8ssp"
                                            android:textColor="@android:color/white"
                                            android:text=""
                                            android:paddingStart="@dimen/_5sdp"
                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:paddingStart="@dimen/_5sdp"
                                            android:text="@string/fichiers"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_8ssp" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_subjects_files_size"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_8ssp"
                                        android:textColor="@android:color/white"
                                        android:text=""
                                        android:paddingStart="@dimen/_5sdp"
                                        android:textStyle="bold"
                                        />
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_resources"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            app:cardBackgroundColor="@color/blackish"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            app:cardElevation="5dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_2sdp"
                                android:background="@android:color/transparent"
                                >
                                <ImageView
                                    android:id="@+id/icon_resources"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_10sdp"
                                    android:contentDescription="@string/image_couldnt_load"
                                    android:src="@drawable/icon_folder_green"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    />
                                <LinearLayout
                                    android:id="@+id/ll_resources"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    app:layout_constraintTop_toBottomOf="@id/icon_resources"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12ssp"
                                        android:text="@string/resources"
                                        android:textColor="@android:color/white"
                                        android:fontFamily="@font/normal_title_font"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        >
                                        <TextView
                                            android:id="@+id/tv_sources_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_8ssp"
                                            android:text=""
                                            android:textColor="@android:color/white"
                                            android:paddingStart="@dimen/_5sdp"
                                            />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_8ssp"
                                            android:text="@string/liens"
                                            android:textColor="@android:color/white"
                                            android:paddingStart="@dimen/_5sdp"
                                            />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_8ssp"
                                        android:textStyle="bold"
                                        />
                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_bookmarks"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            app:cardBackgroundColor="@color/blackish"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            app:cardElevation="5dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_2sdp"
                                android:background="@android:color/transparent"
                                >
                                <ImageView
                                    android:id="@+id/icon_bookmarks"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_10sdp"
                                    android:contentDescription="@string/image_couldnt_load"
                                    android:src="@drawable/icon_folder_blue"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    />
                                <LinearLayout
                                    android:id="@+id/ll_bookmarks"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    app:layout_constraintTop_toBottomOf="@id/icon_bookmarks"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12ssp"
                                        android:text="@string/bookmarks"
                                        android:textColor="@android:color/white"
                                        android:fontFamily="@font/normal_title_font"
                                        />
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        >
                                        <TextView
                                            android:id="@+id/tv_bookmarks_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_8ssp"
                                            android:text=""
                                            android:textColor="@android:color/white"
                                            android:paddingStart="@dimen/_5sdp"
                                            />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_8ssp"
                                            android:textColor="@android:color/white"
                                            android:text="@string/enregistrés"
                                            android:paddingStart="@dimen/_5sdp"
                                            />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_8ssp"
                                        android:textStyle="bold"
                                        />
                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_uni_gate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            app:cardBackgroundColor="@color/blackish"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            app:cardElevation="5dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_2sdp"
                                android:background="@android:color/transparent"
                                >
                                <ImageView
                                    android:id="@+id/icon_uni_gate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_10sdp"
                                    android:contentDescription="@string/image_couldnt_load"
                                    android:src="@drawable/icon_university"
                                    app:tint="@color/white_constant"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    />
                                <LinearLayout
                                    android:id="@+id/ll_uni_gate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    app:layout_constraintTop_toBottomOf="@id/icon_uni_gate"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12ssp"
                                        android:text="@string/portail_d_universit"
                                        android:textColor="@android:color/white"
                                        android:fontFamily="@font/normal_title_font"
                                        />
                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_average_calculator"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            app:cardBackgroundColor="@color/blackish"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            app:cardElevation="5dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_2sdp"
                                android:background="@android:color/transparent"
                                >
                                <ImageView
                                    android:id="@+id/icon_average_calculator_"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_10sdp"
                                    android:contentDescription="@string/image_couldnt_load"
                                    android:src="@drawable/icon_calculator"
                                    app:tint="@color/white_constant"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    />
                                <LinearLayout
                                    android:id="@+id/ll_average_calculator"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    app:layout_constraintTop_toBottomOf="@id/icon_average_calculator_"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12ssp"
                                        android:text="@string/calculatrice_de_moyenne"
                                        android:textColor="@android:color/white"
                                        android:fontFamily="@font/normal_title_font"
                                        />
                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </GridLayout>

                    <TextView
                        android:id="@+id/tv_recent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:text="@string/recent"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/grid_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/rv_recent_opened_files"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_recent_opened_files"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_350sdp"
                        app:layout_constraintTop_toBottomOf="@id/tv_recent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
