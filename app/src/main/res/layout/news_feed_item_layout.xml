<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_6sdp"
    app:layout_constraintTop_toTopOf="parent"
    app:cardElevation="1dp"
    android:layoutDirection="ltr"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@color/white_to_grayish_black"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_flair_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.55"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/im_user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_account_clicked"
                android:layout_marginTop="4dp"
                app:tint="@color/black_icon"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <LinearLayout
                android:id="@+id/ll_user_name_n_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@id/im_user_image"
                app:layout_constraintStart_toEndOf="@id/im_user_image"
                app:layout_constraintEnd_toEndOf="@id/gl_flair_start"
                >
                <com.tp.bacprep.util.RobotoBoldTextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:paddingEnd="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:paddingStart="6dp"
                    android:textColor="@color/black_text"
                    app:layout_constraintTop_toBottomOf="@id/ll_user_name_n_type"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:id="@+id/tv_user_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:paddingEnd="5dp"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/steel_gray"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_user_name_n_type"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_flairs"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/ll_user_name_n_type"
                app:layout_constraintBottom_toBottomOf="@id/ll_user_name_n_type"
                app:layout_constraintEnd_toStartOf="@id/btn_more_flairs"
                app:layout_constraintStart_toStartOf="@id/gl_flair_start"
                android:orientation="horizontal" />
            <ImageView
                android:id="@+id/btn_more_flairs"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:tint="@color/steel_gray"
                android:contentDescription="@string/image_couldnt_load"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ll_flairs"
                app:layout_constraintBottom_toBottomOf="@id/ll_flairs"
                app:layout_constraintStart_toEndOf="@id/ll_flairs"
                android:src="@drawable/icon_add"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:id="@+id/cl_replied_to_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginHorizontal="@dimen/_18sdp"
                app:layout_constraintTop_toBottomOf="@id/ll_user_name_n_type"
                app:layout_constraintBottom_toTopOf="@id/tv_post_title"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:contentDescription="@string/image_couldnt_load"
                    android:src="@drawable/icon_bottom_right"
                    app:tint="@color/steel_gray"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circular_gray_backg"

                    >
                    <com.tp.bacprep.util.RobotoTextView
                        android:id="@+id/tv_request_text"
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/steel_gray"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_show_more_request_text"
                        />
                    <ImageView
                        android:id="@+id/btn_show_more_request_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        app:tint="@color/steel_gray"
                        android:contentDescription="@string/image_couldnt_load"
                        android:src="@drawable/icon_drop_down_arrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <com.tp.bacprep.util.RobotoBoldTextView
                android:id="@+id/tv_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:padding="5dp"
                android:textSize="@dimen/_12ssp"
                android:text="@string/placeholder"
                android:textStyle="bold"
                android:textColor="@color/black_text"
                app:layout_constraintTop_toBottomOf="@id/cl_replied_to_post"
                app:layout_constraintBottom_toTopOf="@id/tv_post_text"
                />
            <com.tp.bacprep.util.RobotoTextView
                android:id="@+id/tv_post_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:padding="5dp"
                android:textColor="@color/steel_gray"
                android:layoutDirection="locale"
                android:textSize="@dimen/_11ssp"
                android:text="@string/placeholder"
                app:layout_constraintTop_toBottomOf="@id/tv_post_title"
                app:layout_constraintBottom_toTopOf="@id/ll_atachments"
                />

            <LinearLayout
                android:id="@+id/ll_atachments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_post_text"
                >

            </LinearLayout>
           <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_interaction_icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal"
               android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/ll_atachments"
                >
               <com.google.android.material.button.MaterialButton
                   android:id="@+id/btn_add_to_bookmark"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:icon="@drawable/icon_bookmark"
                   android:text="@string/enregistrer"
                   android:padding="0dp"
                   android:gravity="start|center_vertical"
                   app:iconTint="@android:color/darker_gray"
                   android:textSize="@dimen/_9ssp"
                   android:textAllCaps="false"
                   android:textColor="@color/black"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:background="@android:color/transparent"
                   />

               <TextView
                   android:id="@+id/tv_time"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingStart="5dp"
                   android:paddingEnd="5dp"
                   android:textColor="@color/steel_gray"
                   android:textSize="@dimen/_7ssp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:text="@string/placeholder"

                   />

           </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
