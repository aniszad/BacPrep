<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="match_parent"
    tools:context=".activities.shared.OnBoardingActivity"
    android:background="@drawable/onb_backg"
    >
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/obFragmentContainerView"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_10ssp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/on_boardn_nav_graph"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="@dimen/buttonRadius"
        android:text="Suivant"
        android:gravity="center"
        android:paddingVertical="@dimen/_10ssp"
        android:paddingHorizontal="@dimen/_15ssp"
        android:textAllCaps="false"
        android:backgroundTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_20ssp"
        android:layout_marginBottom="@dimen/_60sdp"
        />
    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/di_dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10ssp"
        app:dotsColor="@android:color/transparent"
        app:selectedDotColor="@color/yellow"
        app:dotsStrokeColor="@android:color/transparent"
        app:dotsSize="@dimen/_8ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_next"
        app:layout_constraintBottom_toBottomOf="@id/btn_next"
        />
</androidx.constraintlayout.widget.ConstraintLayout>